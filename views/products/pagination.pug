            //- li.page-item
            //-     a.page-link(href='?page=' + index) 1
            //- li.page-item
            //-     a.page-link(href='?page=2') 2
            //- li.page-item
            //-     a.page-link(href='?page=3') 3
            //- li.page-item
            //-     a.page-link(href='#') Next
            - var i = 1
            while i < lengths
                li.page-item
                    a.page-link(href='?page=' + i)= i            
                