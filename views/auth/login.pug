extends ../layouts/common.pug
block content
    if errors
        each error in errors
            .alert.alert-danger= error
    h1 Login
    form(action="/auth/login", method="post")
        .form-group
            label(for="email") Email
            input(type="text", name="email", class="form-control", id="email", value=values ? values.email : "")
        .form-group
            label(for="password") Password
            input(type="password", name="password", class="form-control", id="password", value=values ? values.password : "")
        .form-group
            button(class="btn btn-primary") Login